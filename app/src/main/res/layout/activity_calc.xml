<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtDisplay"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="right|center_vertical"
        android:inputType="text"
        android:textSize="20dp"></TextView>

    <EditText
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="right|center_vertical"
        android:hint="RESULT"
        android:inputType="numberDecimal"
        android:textSize="50dp"
        android:textStyle="bold|italic"></EditText>

    <LinearLayout
        android:id="@+id/btns7_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="7">
        </Button>
        <Button
            android:id="@+id/btn8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="8">
        </Button>
        <Button
            android:id="@+id/btn9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="9">
        </Button>
        <Button
            android:id="@+id/btnMult"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="*">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btns4_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="4">
        </Button>
        <Button
            android:id="@+id/btn5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="5">
        </Button>
        <Button
            android:id="@+id/btn6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="6">
        </Button>
        <Button
            android:id="@+id/btnDivid"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="/">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btns1_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="1"
            android:textSize="24dp"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="2"
            android:textSize="24dp"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="3">
        </Button>

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="+"
            android:textSize="24dp"
            android:textStyle="bold"></Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btns0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn0"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="0">
        </Button>
        <Button
            android:id="@+id/btnMinus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="-">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btnsDot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnResult"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:onClick="onbtnResult"
            android:text="="
            android:textSize="24dp"
            android:textStyle="bold">
        </Button>

        <Button
            android:id="@+id/btnDot"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="."
            android:textSize="24dp"
            android:textStyle="bold">
        </Button>
    </LinearLayout>
</LinearLayout>